@model Domain.Adendas.ValoresReprogramacionDTO
@{
    Layout = "_ReprogramacionLayout";
}
<form asp-action="ValoresReprogramacion" asp-controller="Kardex" method="post">
    <input type="hidden" asp-for="@Model.nIdent_Kardex" />
    <div class="container">
        <div class="row g-2">
            <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                <div class="form-floating">
                    <input type="number" class="form-control" asp-for="@Model.nCuotaActual" readonly/>
                    <label>Cuota Actual</label>
                </div>
            </div>
            <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                <div class="form-floating">
                    <input type="date" class="form-control" asp-for="@Model.dNuevaFechaInicio" required/>
                    <label>Fecha Inicio</label>
                </div>
            </div>
            <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                <div class="form-floating">
                    <input type="number" class="form-control" asp-for="@Model.nNuevoDiaPago" min="1" max="31" required />
                    <label>Dia de Pago</label>
                </div>
            </div>
        </div>
        <div>
            <button type="submit" class="btn btn-outline-success">
                Registrar
            </button>
            <a class="btn btn-outline-warning" asp-action="Kardex" asp-controller="Contratos">Regresar</a>
        </div>
    </div>
</form>